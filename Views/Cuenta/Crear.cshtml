@model CrearCuentaViewModel
<h1>Crear cuenta de usuario</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password1"></label>
        <input asp-for="Password1" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password2"></label>
        <input asp-for="Password2" class="form-control">
    </div>
    
    <button class="btn btn-primary">Registrar</button>
</form>