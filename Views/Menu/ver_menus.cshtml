 @model List<Menu>
<h1>Tabla de Menus</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</td>
            <th>Foto</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Puntos</th>
            <th>Categoria</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td><img src="@item.Foto" alt=""></td>
                <td>@item.Descripcion</td>
                <td>@item.Precio</td>
                <td>@item.Puntos</td>
                <td>@item.Categoria.Nombre</td>
                <td><a asp-action="Modificar" asp-controller="Menu" asp-route-id="@item.Id">Editar</a></td>
                <td><a asp-action="Eliminar" onclick="return confirm('Â¿Desea eliminar este registro?')" asp-controller="Menu" asp-route-id="@item.Id">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>