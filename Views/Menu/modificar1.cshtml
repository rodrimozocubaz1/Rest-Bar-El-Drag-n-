@model Menu

<h1>Registro del Platillo</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Foto"></label>
        <input asp-for="Foto" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" rows="3" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Puntos"></label>
        <input asp-for="Puntos" class="form-control">
        
    </div>
    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select asp-for="CategoriaId" class="form-control">
            @foreach (var item in (List<Categoria>)ViewBag.Categorias)
            {
                <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div>
    
    <button class="btn btn-primary">Registrar</button>
</form>